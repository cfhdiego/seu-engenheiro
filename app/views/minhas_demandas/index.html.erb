<h1>Minhas Demandas</h1>

<table>
  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Estado</th>
      <th>Data fim</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @demandas.each do |demanda| %>
      <tr>
        <td><%= demanda.pessoa_id %></td>
        <td><%= demanda.estado %></td>
        <td><%= demanda.data_fim %></td>
        <td><%= demanda.descricao %></td>
        <td><%= link_to 'Show', show_minha_demanda_path(demanda) %></td>
        <td><%= link_to 'Edit', edit_demanda_path(demanda) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

