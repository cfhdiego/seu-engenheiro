<p id="notice"><%= notice %></p>

<h1>Colaboradores</h1>

<table>
  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Tipo colaborador</th>
      <th>Habilitado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colaboradores.each do |colaborador| %>
      <tr>
        <td><%= colaborador.pessoa_id %></td>
        <td><%= colaborador.tipo_colaborador_id %></td>
        <td><%= colaborador.habilitado %></td>
        <td><%= link_to 'Show', colaborador %></td>
        <td><%= link_to 'Edit', edit_colaborador_path(colaborador) %></td>
        <td><%= link_to 'Destroy', colaborador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

